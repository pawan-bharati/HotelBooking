<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Location"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="20dp"
        android:id="@+id/tvlocation"/>
    <Spinner
        android:id="@+id/spinlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Check In Date"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select room"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="20dp"
        android:id="@+id/tvroom"/>

    <Spinner

        android:id="@+id/spinroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Check In Date"
        android:textSize="20dp" />


    <TextView
        android:textSize="20dp"
        android:id="@+id/simpledatepicker2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Checkin" />


    <TextView
        android:textSize="20dp"
        android:id="@+id/simpledatepicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Checkout"

        />


    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:textSize="20dp"
            android:id="@+id/tvadult"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Adults"></TextView>

        <TextView
            android:textSize="20dp"
            android:id="@+id/tvchild"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Children"></TextView>

        <TextView
            android:textSize="20dp"
            android:id="@+id/tvroom1"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rooms">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relative1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:textSize="20dp"
            android:id="@+id/etadult"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"></EditText>

        <EditText
            android:textSize="20dp"
            android:id="@+id/etchild"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0">

        </EditText>

        <EditText
            android:textSize="20dp"
            android:id="@+id/etroom"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"></EditText>


    </LinearLayout>

    <Button
        android:textSize="20dp"
        android:id="@+id/btncalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CALCULATE" />
    <TextView
        android:id="@+id/tverr"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="20dp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tvdayofstay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tvroomno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/totalsuite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tvtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp" />


    <TextView
        android:layout_weight="1"
        android:id="@+id/tvVat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_circular"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:layout_gravity="center"/>
</LinearLayout>